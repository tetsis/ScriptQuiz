@model Tuple<ScriptQuizWeb.ViewModels.Quizzes.Commons.QuizResponseModel, ScriptQuizWeb.ViewModels.Quizzes.Answer.QuizAnswerRequestModel>

<h1>Quiz</h1>

<h4>Question</h4>
<div class="row">
    <p>
        @Html.DisplayFor(model => Model.Item1.Question)
    </p>
</div>

<h4>Choices</h4>

<div class="row">
    <form asp-action="Details">
        <div class="form-group">
            <input type="radio" name="ChoiceNumber" value=0>@Html.DisplayFor(model => Model.Item1.Choices[0])
        </div>
        <div class="form-group">
            <input type="radio" name="ChoiceNumber" value=1>@Html.DisplayFor(model => Model.Item1.Choices[1])
        </div>
        <div class="form-group">
            <input type="radio" name="ChoiceNumber" value=2>@Html.DisplayFor(model => Model.Item1.Choices[2])
        </div>
        <div class="form-group">
            <input type="radio" name="ChoiceNumber" value=3>@Html.DisplayFor(model => Model.Item1.Choices[3])
        </div>
        <div class="form-group">
            <input type="submit" value="Answer" class="btn btn-primary" />
        </div>
    </form>
</div>
